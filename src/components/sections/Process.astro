---
import Accordion from "../ui/Accordion.astro";
import SectionTitle from "../ui/SectionTitle.astro";
import Section from "./Section.astro";

const description = "Revisa nuestro proceso. Descubre cómo trabajamos para ofrecer la mejor experiencia a nuestros clientes, siguiendo cada paso de nuestro compromiso con la calidad y la innovación.";
---

<Section id="process">
  <div class="md-mt-[150px] mt-[70px]">
    <SectionTitle
      sectionTitle="Trabajo en proceso"
      description={description}
    />
    <Accordion />
  </div>
</Section>